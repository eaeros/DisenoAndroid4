<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eaerostwitter.disenoandroid4.SecondActivity">

    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:text="caja de texto" />

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="open fragmente window"
        android:layout_below="@+id/textViewMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="30dp" />

    <fragment
        android:name="com.eaerostwitter.disenoandroid4.BlankFragment3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/btnFragment"
        android:layout_alignLeft="@+id/btnFragment"
        android:layout_alignStart="@+id/btnFragment"
        android:layout_marginTop="39dp"
        android:id="@+id/fragment1"
        tools:layout="@layout/fragment_blank_fragment3" />

</RelativeLayout>
